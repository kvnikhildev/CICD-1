pipeline {
    agent any

    stages {

        stage('git check out ') {
            steps {
               git branch: 'main', url: 'https://github.com/kvnikhildev/CICD-1.git'
            }
        }


        stage('build') {
            steps {
                sh 'docker build -t node-webv1 .'
            }
        }

        stage('test') {
            steps {
                sh 'npm audit $$ npm test'
            }
        }

        stage('test') {
             environment {
               // SonarQube server name configured in Jenkins
               SONARQUBE_SERVER = 'sonar-server'
            }
            steps {
                script {
                    // Run SonarQube analysis using the SonarQube Scanner
                    withSonarQubeEnv(SONARQUBE_SERVER) {
                        sh 'npx sonar-scanner'
                    }
                }
            }
        }
        
    }
}