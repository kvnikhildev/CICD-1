pipeline {
    agent any

    stages {

        stage('git check out ') {
            steps {
               git branch: 'main', url: 'https://github.com/kvnikhildev/CICD-1.git'
            }
        }


        stage('build') {
            steps {
                sh 'docker build -t node-calculator:v1 .'
            }
        }

        stage('test') {
            steps {
                sh 'npm test'
            }
        }
        
    }
}